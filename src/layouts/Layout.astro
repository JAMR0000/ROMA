---
import '../styles/global.scss';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Cargar traducciones
import es from '../locales/US.json';
import en from '../locales/MX.json';

// Detectar idioma desde la URL
const lang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es';

// Seleccionar traducciones correctas
const t = lang === 'en' ? en : es;

const { title = 'Astro Basics' } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css'
      rel='stylesheet'
    />
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js'
    ></script>
    <title>Roma Property and Management</title>
  </head>
  <body>
    <Header t={t.header} lang={lang} />
    <main>
      <slot />
    </main>
    <Footer t={t.footer} lang={lang} />
  </body>
</html>

<style lang='scss'>
  body {
    display: grid;
    grid-template-rows: auto 1fr auto;
    min-height: 100vh;
    main{
      background-color: var(--primary-color);
    }
  }
</style>
